@model SystemSubskrypcjiMMB.Models.SubskrypcjaMMB

@{
    ViewData["Title"] = "Edytuj subskrypcję";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0"><i class="bi bi-pencil"></i> Edytuj @Model.Nazwa</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    
                    <input asp-for="Id" type="hidden" />
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <label asp-for="Nazwa" class="form-label fw-bold"></label>
                            <input asp-for="Nazwa" class="form-control" />
                            <span asp-validation-for="Nazwa" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Cena" class="form-label fw-bold"></label>
                            <input asp-for="Cena" class="form-control" step="0.01" />
                            <span asp-validation-for="Cena" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-4 mt-4">
                        <div class="col-md-6">
                            <label asp-for="DataRozpoczecia" class="form-label fw-bold"></label>
                            <input asp-for="DataRozpoczecia" class="form-control" type="date" />
                            <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DataZakonczenia" class="form-label fw-bold"></label>
                            <input asp-for="DataZakonczenia" class="form-control" type="date" />
                            <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-success btn-lg">💾 Zapisz zmiany</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">← Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


